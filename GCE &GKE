sudo su - 
apt update
apt install -y nginx
service nginx start
exit

## crear repositorio artifacts 
gcloud artifacts repositories create nombre \ --repository-format=docker \ --location=us-west1\

git clone https://github.com/GoogleCloudPlatform/kubernetes-engine-samples
cd kubernetes-engine-samples/hello-app

#compilar la imagen de la aplicacion

docker build -t REGION-docker.pkg.dev/bbva-it-octubre/hello-repo/hello-app:v1 .

#configuar la cli para que se autentique con artifacts

gcloud authconfigure-docker us-west1-docker.pkg.dev

#enviar la imagen de docker al repositorio

docker push REGION-docker.pkg.dev/bbva-it-octubre/hello-repo/hello-app:v1
